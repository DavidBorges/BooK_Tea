<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="16dp">

    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/capaLivro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="6dp"
        android:src="@null" />

    <TextView
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/capaLivro"
        android:id="@+id/tituloLivro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="16sp" />

    <TextView
        android:textColor="@color/black"
        android:layout_below="@+id/tituloLivro"
        android:layout_alignLeft="@+id/tituloLivro"
        android:id="@+id/autorLivro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12sp" />

    <View
        android:id="@+id/vw_divisor"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tituloLivro"
        android:layout_below="@+id/autorLivro"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />

</RelativeLayout>