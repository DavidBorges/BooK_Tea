<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="16dp">

    <ImageView
        android:id="@+id/capaLivro"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/book_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/tituloLivro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:text="Exemplo"
        android:textSize="18sp"
        android:layout_marginStart="7dp"
        android:layout_alignTop="@+id/capaLivro"
        android:layout_toEndOf="@+id/capaLivro" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/autorLivro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:text="Exemplo"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="7dp"
        android:layout_below="@+id/tituloLivro"
        android:layout_toEndOf="@+id/capaLivro" />

    <View
        android:id="@+id/vw_divisor"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tituloLivro"
        android:layout_below="@+id/autorLivro"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />

</RelativeLayout>