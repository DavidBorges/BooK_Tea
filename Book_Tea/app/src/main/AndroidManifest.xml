    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_book_tea_min"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_book_tea_min"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".FriendListActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".BookRegisterActivity" />
        <activity
            android:name=".BookReadActivity"
            android:label="@string/title_activity_book_read" />
    </application>

</manifest>